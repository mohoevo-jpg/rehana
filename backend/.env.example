# Server Configuration
PORT=3001
NODE_ENV=production

# Security
# Set this to your frontend domain in production (e.g., https://rehana-app.com)
CORS_ORIGIN=*

# Email Configuration (for OTP/Notifications)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# JWT Configuration (if implemented later)
JWT_SECRET=your_super_secret_key_change_this

# WhatsApp Configuration
WHATSAPP_PROVIDER=local # Options: local, meta
META_WA_TOKEN=your_meta_access_token
META_PHONE_ID=your_phone_number_id
