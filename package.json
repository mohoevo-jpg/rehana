{
  "name": "rehana-cashier",
  "private": true,
  "version": "1.0.6",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:3002 && electron .\"",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "chart.js": "^4.5.1",
    "date-fns": "^3.0.0",
    "electron-updater": "^6.6.2",
    "jsbarcode": "^3.12.1",
    "lucide-vue-next": "^0.300.0",
    "pinia": "^2.1.0",
    "socket.io-client": "^4.8.2",
    "uuid": "^9.0.1",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.3",
    "vue-i18n": "^9.9.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rehana.cashier",
    "productName": "Rehana Cashier",
    "icon": "public/logo.png",
    "directories": {
      "output": "dist_electron_final"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "landing",
        "to": "landing",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "node_modules/**/*",
          "!**/.wwebjs_auth/**",
          "!**/logs/**",
          "!**/.env",
          "!**/puppeteer-core/.local-chromium/**",
          "!**/puppeteer/.local-chromium/**"
        ]
      },
      {
        "from": "backend/.env.example",
        "to": "backend/.env"
      },
      {
        "from": "mobile-app/dist",
        "to": "mobile-app/dist"
      },
      {
        "from": "dist",
        "to": "dist"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ]
  }
}
